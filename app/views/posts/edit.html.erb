<%= render :partial => 'forums/trail' %>
<h3>Edit Post</h3>

<% form_for @post do |f| %>
  <%= f.error_messages %>
  <div class="form-field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="form-field">
    <%= f.label :body %>
    <%= f.text_area :body, :rows => 10, :cols => 80 %>
  </div>
  <div class="form-field">
    <%= f.submit "Update" %>
  </div>
  <div style="clear:both;"></div>
<% end %>
